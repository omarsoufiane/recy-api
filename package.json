{
  "name": "detrash-api",
  "version": "0.0.1",
  "description": "Recy Networking",
  "author": "Detrash",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:migrate:prod": "prisma migrate deploy && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "deploy": "npm ci && npm run build && npm run start:prod",
    "email:dev": "email dev -p 3001",
    "migrate:dev": "cd prisma && npm run migrate:dev",
    "migrate:deploy": "cd prisma && npm run migrate:deploy",
    "prisma:generate": "cd prisma && npm run build",
    "test": "npm run test:type && npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config ./test/jest.unit.ts",
    "test:type": "tsc --noEmit",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand --config ./test/jest.e2e.ts --forceExit",
    "test:e2e:watch": "npm run test:e2e -- --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.525.0",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/swagger": "^7.4.0",
    "@opentelemetry/auto-instrumentations-node": "^0.51.0",
    "@opentelemetry/exporter-jaeger": "^1.26.0",
    "@opentelemetry/exporter-prometheus": "^0.53.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^6.2.1",
    "@prisma/client": "^5.17.0",
    "@react-email/components": "0.0.22",
    "@types/express": "^4.17.21",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express-jwt": "^7.7.5",
    "graphql": "^16.5.0",
    "jwks-rsa": "^2.1.4",
    "nestjs-otel": "^6.1.1",
    "jest-mock-extended": "^4.0.0-beta1",
    "nest-winston": "^1.9.7",
    "react": "^18.3.1",
    "react-email": "2.1.6",
    "reflect-metadata": "^0.1.13",
    "resend": "^3.5.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ulid": "^2.3.0",
    "web3": "^4.13.0",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.4.4",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.12",
    "@types/node": "^18.19.49",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "lefthook": "^1.7.15",
    "prettier": "^2.3.2",
    "prisma": "^5.17.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.0.0",
    "typescript": "^5.5.4"
  },
  "resolutions": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.1.0"
  },
  "prisma": {
    "schema": "database/prisma/schema.prisma"
  }
}
